# Analytics backend configuration
# Set this to the full events endpoint your backend exposes
# Example: https://api.yourdomain.com/analytics/events
ANALYTICS_BACKEND_URL=

# Optional: force mock mode (no network calls, console logging)
# Set to true to run without backend
ANALYTICS_MOCK_MODE=true

# Optional: analytics batching
# Number of events per POST
ANALYTICS_BATCH_SIZE=50
# Suggest flush frequency in ms (used by timers if implemented)
ANALYTICS_FLUSH_INTERVAL_MS=5000

# Optional: WebSocket URL for real-time analytics (future use)
WS_URL=

# Base API URL for all services (e.g., http://localhost:3000)
API_BASE_URL=